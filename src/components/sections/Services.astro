const colorClasses = {
  electric: 'text-electric group-hover:shadow-electric/20',
  purple: 'text-purple group-hover:shadow-purple/20',
  cyan: 'text-cyan group-hover:shadow-cyan/20',
};
---

<section id="services" class="section-padding relative">
  <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

  <div class="container-custom relative">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-white">Full-Stack</span>
        <span class="text-gradient"> Engineering</span>
      </h2>
      <p class="text-xl text-steel max-w-2xl mx-auto">
        Everything you need to build, run, and scale modern infrastructure.
        One partner, complete capabilities.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, index) => (
        <div
          class="group card-glass p-6 transition-all duration-500 hover:-translate-y-2 reveal"
          style={`transition-delay: ${index * 50}ms`}
        >
          <div class="glow-effect"></div>
          <div class="relative z-10">
            <div class={`mb-4 ${colorClasses[service.color as keyof typeof colorClasses]}`} set:html={service.icon} />
            <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-cyan transition-colors">
              {service.title}
            </h3>
            <p class="text-steel text-sm leading-relaxed">
              {service.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
