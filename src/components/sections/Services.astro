---
const serviceCategories = [
  {
    title: 'AI & Intelligent Systems',
    tagline: 'Automation that thinks',
    color: 'purple',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    services: [
      {
        title: 'AI & Agentic Systems',
        description: 'Intelligent systems that reason, act, and adapt—from automation to autonomous agents.',
      },
      {
        title: 'Software Development',
        description: 'Custom applications engineered for scale, performance, and the problems only you face.',
      },
    ],
  },
  {
    title: 'Cloud & Infrastructure',
    tagline: 'Scale without limits',
    color: 'cyan',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>`,
    services: [
      {
        title: 'Kubernetes & Containers',
        description: 'Cloud-native infrastructure that scales with your ambitions, not your headaches.',
      },
      {
        title: 'DevOps & Platform Engineering',
        description: 'Internal platforms that make shipping to production feel like magic, not warfare.',
      },
      {
        title: 'Cloud Migrations',
        description: 'Move to the cloud without the chaos—strategic migrations that minimize risk.',
      },
      {
        title: 'Managed Services',
        description: '24/7 operations so your team builds tomorrow while we manage today.',
      },
    ],
  },
  {
    title: 'Security Engineering',
    tagline: 'Protection by design',
    color: 'electric',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    services: [
      {
        title: 'Cybersecurity',
        description: 'Security woven into architecture, not bolted on after breaches.',
      },
      {
        title: 'Penetration Testing',
        description: 'Find vulnerabilities before attackers do—comprehensive security assessments.',
      },
    ],
  },
];

const colorClasses = {
  electric: 'from-electric to-ocean',
  purple: 'from-purple to-electric',
  cyan: 'from-cyan to-electric',
};
---

<section id="services" class="section-padding relative">
  <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

  <div class="container-custom relative">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-white">Secure, AI-Driven</span>
        <span class="text-gradient"> Cloud Solutions</span>
      </h2>
      <p class="text-xl text-steel max-w-2xl mx-auto">
        Three pillars of modern engineering. One partner, complete capabilities.
      </p>
    </div>

    <!-- Service Categories -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {serviceCategories.map((category, catIndex) => (
        <div
          class="card-glass p-8 transition-all duration-500 hover:-translate-y-2 reveal"
          style={`transition-delay: ${catIndex * 100}ms`}
        >
          <div class="glow-effect"></div>
          <div class="relative z-10">
            <!-- Category Header -->
            <div class={`inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br ${colorClasses[category.color as keyof typeof colorClasses]} mb-6`}>
              <div class="text-white" set:html={category.icon} />
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">{category.title}</h3>
            <p class="text-cyan text-sm font-medium mb-6">{category.tagline}</p>

            <!-- Services List -->
            <div class="space-y-4">
              {category.services.map((service) => (
                <div class="border-l-2 border-white/10 pl-4 hover:border-cyan transition-colors">
                  <h4 class="text-white font-semibold mb-1">{service.title}</h4>
                  <p class="text-steel text-sm">{service.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
