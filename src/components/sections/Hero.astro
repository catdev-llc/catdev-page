<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 hexagon-pattern opacity-30"></div>
  <div class="absolute inset-0 bg-gradient-radial from-deep-space/50 to-transparent"></div>

  <!-- Animated Gradient Orbs -->
  <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-electric/20 rounded-full blur-3xl animate-float"></div>
  <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-purple/20 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
  <div class="absolute top-1/2 right-1/3 w-64 h-64 bg-cyan/10 rounded-full blur-3xl animate-float" style="animation-delay: -1.5s;"></div>

  <!-- Content -->
  <div class="container-custom relative z-10 text-center pt-20">
    <div class="max-w-4xl mx-auto">
      <!-- Eyebrow -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur-sm mb-8 animate-fade-in">
        <span class="w-2 h-2 rounded-full bg-cyan animate-pulse"></span>
        <span class="text-sm text-steel">Cloud-Native DevOps & DevSecOps Specialist</span>
      </div>

      <!-- Main Headline -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-6 animate-fade-in-up">
        <span class="text-white">Ship Faster, Ship Secure.</span>
        <br />
        <span class="text-gradient">We Build the Platform.</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl text-steel max-w-2xl mx-auto mb-12 animate-fade-in-up animate-delay-200">
        Production-grade delivery platforms for SaaS teams. Infrastructure as Code, Kubernetes, CI/CD pipelines, and software supply chain securityâ€”built and operated by senior platform engineers.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up animate-delay-400">
        <a href="#contact" class="btn-primary">
          <span>Book Platform Assessment</span>
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="#services" class="btn-secondary">
          See What We Build
        </a>
      </div>

      <!-- Stack Logos -->
      <div class="mt-16 animate-fade-in animate-delay-600">
        <p class="text-steel/60 text-sm mb-6 uppercase tracking-wider">Enterprise-grade cloud-native stack</p>
        <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
          <span class="text-steel font-mono text-sm">Kubernetes</span>
          <span class="text-steel/40">|</span>
          <span class="text-steel font-mono text-sm">Terraform</span>
          <span class="text-steel/40">|</span>
          <span class="text-steel font-mono text-sm">ArgoCD</span>
          <span class="text-steel/40">|</span>
          <span class="text-steel font-mono text-sm">GitHub Actions</span>
          <span class="text-steel/40">|</span>
          <span class="text-steel font-mono text-sm">Sigstore</span>
          <span class="text-steel/40">|</span>
          <span class="text-steel font-mono text-sm">AWS / GCP / Azure</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - positioned at bottom of section -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-fade-in animate-delay-600 z-10">
    <a href="#services" class="flex flex-col items-center gap-2 text-steel hover:text-white transition-colors">
      <span class="text-sm">Scroll to explore</span>
      <div class="w-6 h-10 rounded-full border-2 border-current flex items-start justify-center p-1">
        <div class="w-1.5 h-3 bg-current rounded-full animate-bounce"></div>
      </div>
    </a>
  </div>

  <!-- Geometric Decorations -->
  <div class="absolute top-20 right-10 w-20 h-20 border border-electric/20 rotate-45 animate-float" style="animation-delay: -2s;"></div>
  <div class="absolute bottom-40 left-10 w-16 h-16 border border-purple/20 rotate-12 animate-float" style="animation-delay: -4s;"></div>
  <div class="absolute top-40 left-20 w-8 h-8 bg-cyan/20 rounded-full animate-pulse-glow"></div>
</section>
