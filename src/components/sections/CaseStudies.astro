---
const caseStudies = [
  {
    id: 'fintech-security',
    category: 'Security Engineering',
    title: 'Security Assessment for Fintech Platform',
    client: {
      industry: 'Financial Technology',
      size: '50-100 employees',
      location: 'Europe',
    },
    challenge: 'Series B-stage fintech platform needed comprehensive security due diligence before closing their funding round. Investors required evidence of robust security practices.',
    solution: [
      'Web application penetration testing',
      'API security assessment',
      'Cloud infrastructure review (AWS)',
      'Source code security audit',
    ],
    results: [
      { metric: '12', label: 'Critical/High findings identified' },
      { metric: '100%', label: 'Critical issues remediated' },
      { metric: '4 weeks', label: 'Assessment duration' },
    ],
    outcome: 'Client successfully closed their Series B funding round with full investor confidence in their security posture.',
    tags: ['Penetration Testing', 'Cloud Security', 'Fintech', 'Due Diligence'],
  },
  {
    id: 'rag-knowledge-base',
    category: 'AI & Intelligent Systems',
    title: 'On-Premise RAG Knowledge Base with Local LLMs',
    client: {
      industry: 'Manufacturing',
      size: '500+ employees',
      location: 'Germany',
    },
    challenge: 'Enterprise needed an AI-powered knowledge base for internal documentation but required full data sovereigntyâ€”no cloud dependencies or data leaving their premises.',
    solution: [
      'Deployed local LLM infrastructure (Ollama + Llama 3)',
      'Built RAG pipeline with vector database (Milvus)',
      'Integrated with existing document management system',
      'Custom fine-tuning on domain-specific terminology',
    ],
    results: [
      { metric: '85%', label: 'Query accuracy rate' },
      { metric: '10x', label: 'Faster document retrieval' },
      { metric: '0', label: 'External API dependencies' },
    ],
    outcome: 'Engineers now find answers to technical questions in seconds instead of hours, with complete data privacy and no ongoing cloud costs.',
    tags: ['RAG', 'Local LLM', 'On-Premise', 'Knowledge Management'],
  },
];
---

<section id="case-studies" class="section-padding relative">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <span class="text-cyan text-sm font-semibold tracking-wider uppercase mb-4 block">Case Studies</span>
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="text-white">Real results for</span>
        <span class="text-gradient"> real clients</span>
      </h2>
      <p class="text-xl text-steel max-w-2xl mx-auto">
        See how we've helped organizations solve complex technical challenges and deliver measurable business outcomes.
      </p>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid lg:grid-cols-2 gap-8">
      {caseStudies.map((study, index) => (
        <div class="card-glass p-8 reveal" style={`transition-delay: ${index * 100}ms`}>
          <div class="glow-effect"></div>
          <div class="relative z-10">
            <!-- Category Badge -->
            <span class="inline-block px-3 py-1 bg-electric/20 text-electric text-xs font-semibold rounded-full mb-4">
              {study.category}
            </span>

            <!-- Title -->
            <h3 class="text-2xl font-bold text-white mb-4">{study.title}</h3>

            <!-- Client Info -->
            <div class="flex flex-wrap gap-4 text-sm text-steel mb-6">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                {study.client.industry}
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                {study.client.size}
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {study.client.location}
              </span>
            </div>

            <!-- Challenge -->
            <div class="mb-6">
              <h4 class="text-white font-semibold mb-2">The Challenge</h4>
              <p class="text-steel">{study.challenge}</p>
            </div>

            <!-- Solution -->
            <div class="mb-6">
              <h4 class="text-white font-semibold mb-2">Our Solution</h4>
              <ul class="space-y-2">
                {study.solution.map((item) => (
                  <li class="flex items-start gap-2 text-steel">
                    <svg class="w-5 h-5 text-cyan flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
            </div>

            <!-- Results -->
            <div class="mb-6">
              <h4 class="text-white font-semibold mb-3">Results</h4>
              <div class="grid grid-cols-3 gap-4">
                {study.results.map((result) => (
                  <div class="text-center p-3 bg-midnight/50 rounded-lg">
                    <div class="text-2xl font-bold text-cyan">{result.metric}</div>
                    <div class="text-xs text-steel">{result.label}</div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Outcome -->
            <div class="p-4 bg-gradient-to-r from-electric/10 to-purple/10 rounded-lg border-l-4 border-cyan mb-6">
              <p class="text-white text-sm italic">"{study.outcome}"</p>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {study.tags.map((tag) => (
                <span class="px-2 py-1 bg-steel/10 text-steel text-xs rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
