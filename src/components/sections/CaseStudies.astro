  /* Centered carousel with active card prominent */
  .case-study-card {
    flex-shrink: 0;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .case-study-card.active {
    width: 80%;
    max-width: 900px;
    opacity: 1;
    filter: blur(0);
    transform: scale(1);
    z-index: 10;
  }

  .case-study-card.inactive {
    width: 5%;
    max-width: 60px;
    opacity: 0.15;
    filter: blur(4px);
    transform: scale(0.95);
    z-index: 1;
    overflow: hidden;
    cursor: pointer;
  }

  .case-study-card.inactive:hover {
    opacity: 0.25;
  }

  .case-study-card.inactive .card-glass {
    pointer-events: none;
  }

  /* Hide content in inactive cards */
  .case-study-card.inactive .relative.z-10 > *:not(:first-child) {
    display: none;
