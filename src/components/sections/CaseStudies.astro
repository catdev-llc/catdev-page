</style>

<script>
  const cards = document.querySelectorAll('.case-study-card');
  const indicators = document.querySelectorAll('#carousel-indicators button');
  const scrollLeftBtn = document.getElementById('scroll-left');
  const scrollRightBtn = document.getElementById('scroll-right');
  let currentIndex = 0;
  const totalCards = cards.length;

  function updateCarousel(newIndex: number) {
    // Clamp index
    if (newIndex < 0) newIndex = 0;
    if (newIndex >= totalCards) newIndex = totalCards - 1;

    currentIndex = newIndex;

    // Update cards
    cards.forEach((card, i) => {
      if (i === currentIndex) {
        card.classList.remove('inactive');
        card.classList.add('active');
      } else {
        card.classList.remove('active');
        card.classList.add('inactive');
      }
    });

    // Update indicators
    indicators.forEach((indicator, i) => {
      if (i === currentIndex) {
        indicator.classList.remove('bg-white/30', 'w-2');
        indicator.classList.add('bg-cyan', 'w-8');
      } else {
        indicator.classList.remove('bg-cyan', 'w-8');
        indicator.classList.add('bg-white/30', 'w-2');
      }
    });

    // Update button states
    if (scrollLeftBtn && scrollRightBtn) {
      scrollLeftBtn.style.opacity = currentIndex === 0 ? '0.3' : '1';
      scrollLeftBtn.style.pointerEvents = currentIndex === 0 ? 'none' : 'auto';
      scrollRightBtn.style.opacity = currentIndex === totalCards - 1 ? '0.3' : '1';
      scrollRightBtn.style.pointerEvents = currentIndex === totalCards - 1 ? 'none' : 'auto';
    }
  }

  // Arrow navigation
  if (scrollLeftBtn && scrollRightBtn) {
    scrollLeftBtn.addEventListener('click', () => updateCarousel(currentIndex - 1));
    scrollRightBtn.addEventListener('click', () => updateCarousel(currentIndex + 1));
  }

  // Indicator navigation
  indicators.forEach((indicator, i) => {
    indicator.addEventListener('click', () => updateCarousel(i));
  });

  // Click on inactive card to navigate
  cards.forEach((card, i) => {
    card.addEventListener('click', () => {
      if (card.classList.contains('inactive')) {
        updateCarousel(i);
      }
    });
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') updateCarousel(currentIndex - 1);
    if (e.key === 'ArrowRight') updateCarousel(currentIndex + 1);
  });

  // Initial state
  updateCarousel(0);
</script>
