<section id="contact" class="section-padding relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-radial from-electric/10 via-transparent to-transparent"></div>
  <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center reveal">
      <!-- Header -->
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        <span class="text-white">Ready to</span>
        <span class="text-gradient"> build?</span>
      </h2>

      <p class="text-xl text-steel mb-12 max-w-xl mx-auto">
        Let's talk about what you're building and how we can help you ship it.
        No sales pitch, just honest conversation.
      </p>

      <!-- Contact Options -->
      <div class="card-glass p-8 md:p-12 mb-8">
        <div class="glow-effect"></div>
        <div class="relative z-10">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Email -->
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-hero mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">Email Us</h3>
              <p class="text-steel mb-4">We typically respond within 4 hours</p>
              <a
                href="mailto:info@catdev.io"
                class="inline-flex items-center gap-2 text-cyan hover:text-white transition-colors text-lg font-medium"
              >
                info@catdev.io
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>

            <!-- Schedule -->
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-hero mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">Book a Call</h3>
              <p class="text-steel mb-4">30-minute intro call with an engineer</p>
              <a
                href="https://cal.com/catdev"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-cyan hover:text-white transition-colors text-lg font-medium"
              >
                Schedule now
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Trust Note -->
      <p class="text-steel text-sm">
        CATDEV LLC, St. Petersburg, Florida, USA.
        <span class="text-white">Serving clients globally.</span>
      </p>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-electric/50 to-transparent"></div>
</section>
