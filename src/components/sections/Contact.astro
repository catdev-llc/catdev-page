<section id="contact" class="section-padding relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-radial from-electric/10 via-transparent to-transparent"></div>
  <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

  <div class="container-custom relative">
    <div class="max-w-4xl mx-auto text-center reveal">
      <!-- Header -->
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        <span class="text-white">Ready to</span>
        <span class="text-gradient"> build?</span>
      </h2>

      <p class="text-xl text-steel mb-12 max-w-xl mx-auto">
        Let's talk about what you're building and how we can help you ship it.
        No sales pitch, just honest conversation.
      </p>

      <!-- Contact Options - 3 Cards -->
      <div class="grid md:grid-cols-3 gap-6 mb-10">
        <!-- Email -->
        <div class="card-glass p-6">
          <div class="glow-effect"></div>
          <div class="relative z-10 text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-hero mb-4">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Email Us</h3>
            <p class="text-steel text-sm mb-4">Response within 4 hours</p>
            <a href="mailto:info@catdev.io" class="btn-secondary text-sm w-full justify-center">
              Send Email
            </a>
          </div>
        </div>

        <!-- Schedule Call - Featured -->
        <div class="card-glass p-6 border-2 border-cyan relative">
          <div class="glow-effect"></div>
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <span class="px-3 py-1 bg-cyan text-midnight text-xs font-bold rounded-full">RECOMMENDED</span>
          </div>
          <div class="relative z-10 text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-hero mb-4">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Book Strategy Call</h3>
            <p class="text-steel text-sm mb-4">30-min with senior engineer</p>
            <a href="https://cal.com/catdev" target="_blank" rel="noopener noreferrer" class="btn-primary text-sm w-full justify-center">
              Schedule Now
            </a>
          </div>
        </div>

        <!-- RFP -->
        <div class="card-glass p-6">
          <div class="glow-effect"></div>
          <div class="relative z-10 text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-hero mb-4">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Send RFP</h3>
            <p class="text-steel text-sm mb-4">For formal procurement</p>
            <a href="mailto:info@catdev.io?subject=RFP Submission" class="btn-secondary text-sm w-full justify-center">
              Submit RFP
            </a>
          </div>
        </div>
      </div>

      <!-- What Happens Next -->
      <div class="card-glass p-8 text-left mb-10">
        <div class="glow-effect"></div>
        <div class="relative z-10">
          <h4 class="text-white font-semibold mb-6 text-center">What happens next?</h4>
          <div class="grid md:grid-cols-3 gap-8">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold">1</div>
              <div>
                <div class="text-white font-semibold mb-1">Initial Call</div>
                <div class="text-steel text-sm">30-min to understand your needs, timeline, and constraints</div>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold">2</div>
              <div>
                <div class="text-white font-semibold mb-1">Proposal</div>
                <div class="text-steel text-sm">Detailed scope, timeline, and fixed-price estimate within 2-3 days</div>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold">3</div>
              <div>
                <div class="text-white font-semibold mb-1">Kickoff</div>
                <div class="text-steel text-sm">Contract signed, team assigned, work begins within 1 week</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Links -->
      <div class="flex items-center justify-center gap-6 mb-8">
        <a href="https://www.linkedin.com/company/43311393/" target="_blank" rel="noopener noreferrer" class="text-steel hover:text-cyan transition-colors" aria-label="LinkedIn">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="https://facebook.com/catdevllc" target="_blank" rel="noopener noreferrer" class="text-steel hover:text-cyan transition-colors" aria-label="Facebook">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>

      <!-- Trust Note -->
      <p class="text-steel text-sm">
        CATDEV LLC, St. Petersburg, Florida, USA.
        <span class="text-white">Serving clients globally.</span>
      </p>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-electric/50 to-transparent"></div>
</section>
