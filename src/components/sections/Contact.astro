<section id="contact" class="section-padding relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-radial from-electric/10 via-transparent to-transparent"></div>
  <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

  <div class="container-custom relative">
    <div class="max-w-5xl mx-auto text-center reveal">
      <!-- Header -->
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        <span class="text-white">Ready to</span>
        <span class="text-gradient"> build?</span>
      </h2>

      <p class="text-xl text-steel mb-12 max-w-xl mx-auto">
        Let's talk about what you're building and how we can help you ship it.
        No sales pitch, just honest conversation.
      </p>

      <!-- Contact Options - 2 Column Layout -->
      <div class="grid lg:grid-cols-2 gap-8 mb-10">
        <!-- Left: Contact Form -->
        <div class="card-glass p-8 text-left">
          <div class="glow-effect"></div>
          <div class="relative z-10">
            <h3 class="text-xl font-semibold text-white mb-6">Send us a message</h3>
            <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-4">
              <!-- Web3Forms Access Key - You'll need to get this from web3forms.com -->
              <input type="hidden" name="access_key" value="13d183f9-2567-484a-ab30-2bffe705bdd2" />
              <input type="hidden" name="subject" value="New Contact from catdev.io" />
              <input type="hidden" name="from_name" value="catdev.io Contact Form" />
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm text-steel mb-2">Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-midnight/50 border border-steel/20 rounded-lg text-white placeholder-steel/50 focus:border-cyan focus:outline-none transition-colors"
                    placeholder="Your name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm text-steel mb-2">Email *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-midnight/50 border border-steel/20 rounded-lg text-white placeholder-steel/50 focus:border-cyan focus:outline-none transition-colors"
                    placeholder="you@company.com"
                  />
                </div>
              </div>

              <div>
                <label for="company" class="block text-sm text-steel mb-2">Company</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 bg-midnight/50 border border-steel/20 rounded-lg text-white placeholder-steel/50 focus:border-cyan focus:outline-none transition-colors"
                  placeholder="Your company (optional)"
                />
              </div>

              <div>
                <label for="interest" class="block text-sm text-steel mb-2">I'm interested in...</label>
                <select
                  id="interest"
                  name="interest"
                  class="w-full px-4 py-3 bg-midnight/50 border border-steel/20 rounded-lg text-white focus:border-cyan focus:outline-none transition-colors"
                >
                  <option value="general">General Inquiry</option>
                  <option value="ai">AI & Intelligent Systems</option>
                  <option value="cloud">Cloud & Infrastructure</option>
                  <option value="security">Security Engineering</option>
                  <option value="rfp">RFP / Formal Procurement</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm text-steel mb-2">Message *</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="4"
                  class="w-full px-4 py-3 bg-midnight/50 border border-steel/20 rounded-lg text-white placeholder-steel/50 focus:border-cyan focus:outline-none transition-colors resize-none"
                  placeholder="Tell us about your project..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="btn-secondary w-full justify-center"
              >
                Send Message
              </button>

              <p class="text-steel/60 text-xs text-center">
                We'll respond within 4 hours during business days.
              </p>
            </form>

            <!-- Success/Error Messages -->
            <div id="form-success" class="hidden mt-4 p-4 bg-green-500/20 border border-green-500/50 rounded-lg text-green-400 text-center">
              Message sent successfully! We'll be in touch soon.
            </div>
            <div id="form-error" class="hidden mt-4 p-4 bg-red-500/20 border border-red-500/50 rounded-lg text-red-400 text-center">
              Something went wrong. Please try again or email us directly.
            </div>
          </div>
        </div>

        <!-- Right: Book Call + Info -->
        <div class="space-y-6">
          <!-- Schedule Call - Featured -->
          <div class="card-glass p-8 border-2 border-cyan relative">
            <div class="glow-effect"></div>
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="px-4 py-1.5 bg-cyan text-midnight text-sm font-bold rounded-full shadow-lg shadow-cyan/30">RECOMMENDED</span>
            </div>
            <div class="relative z-10 text-center pt-2">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-hero mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-white mb-2">Book a Strategy Call</h3>
              <p class="text-steel mb-6">30-minute call with a senior engineer to discuss your project, timeline, and how we can help.</p>
              <a href="https://cal.com/catdev" target="_blank" rel="noopener noreferrer" class="btn-primary w-full justify-center">
                Schedule Now
              </a>
            </div>
          </div>

          <!-- What Happens Next -->
          <div class="card-glass p-6 text-left">
            <div class="glow-effect"></div>
            <div class="relative z-10">
              <h4 class="text-white font-semibold mb-4">What happens next?</h4>
              <div class="space-y-4">
                <div class="flex gap-3">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold text-sm">1</div>
                  <div>
                    <div class="text-white font-medium">Initial Call</div>
                    <div class="text-steel text-sm">30-min to understand your needs</div>
                  </div>
                </div>
                <div class="flex gap-3">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold text-sm">2</div>
                  <div>
                    <div class="text-white font-medium">Proposal</div>
                    <div class="text-steel text-sm">Detailed scope within 2-3 days</div>
                  </div>
                </div>
                <div class="flex gap-3">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-hero text-white flex items-center justify-center font-bold text-sm">3</div>
                  <div>
                    <div class="text-white font-medium">Kickoff</div>
                    <div class="text-steel text-sm">Work begins within 1 week</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Links -->
      <div class="flex items-center justify-center gap-6 mb-8">
        <a href="https://www.linkedin.com/company/43311393/" target="_blank" rel="noopener noreferrer" class="text-steel hover:text-cyan transition-colors" aria-label="LinkedIn">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="https://facebook.com/catdevllc" target="_blank" rel="noopener noreferrer" class="text-steel hover:text-cyan transition-colors" aria-label="Facebook">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>

      <!-- Trust Note -->
      <p class="text-steel text-sm">
        CATDEV LLC, St. Petersburg, Florida, USA.
        <span class="text-white">Serving clients globally.</span>
      </p>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-electric/50 to-transparent"></div>
</section>

<script>
  const form = document.getElementById('contact-form');
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);

    try {
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        successMsg?.classList.remove('hidden');
        errorMsg?.classList.add('hidden');
        (form as HTMLFormElement).reset();
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      errorMsg?.classList.remove('hidden');
      successMsg?.classList.add('hidden');
    }
  });
</script>
