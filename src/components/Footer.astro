---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'Cloud-Native Delivery Platform', href: '#services' },
    { name: 'Supply Chain Hardening', href: '#services' },
    { name: 'Cloud Migration & Modernization', href: '#services' },
  ],
  company: [
    { name: 'About', href: '#about' },
    { name: 'Contact', href: '#contact' },
    { name: 'Imprint', href: '/imprint' },
  ],
};
---

<footer class="border-t border-white/5 bg-midnight/50">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center mb-6">
          <img src="/logo.png" alt="catdev" class="h-10 w-auto" />
        </a>
        <p class="text-steel max-w-md mb-4">
          Cloud-native platform engineering for SaaS teams.
          Kubernetes, CI/CD, supply chain securityâ€”built and operated by senior engineers.
        </p>
        <p class="text-steel text-sm mb-4">
          CATDEV LLC<br />
          7901 4th St N STE 300<br />
          St. Petersburg, FL 33702, USA
        </p>
        <a href="mailto:info@catdev.io" class="text-cyan hover:text-white transition-colors">
          info@catdev.io
        </a>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Services
        </h4>
        <ul class="space-y-3">
          {footerLinks.services.map(link => (
            <li>
              <a href={link.href} class="text-steel hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Company
        </h4>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-steel hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-steel text-sm">
        &copy; {currentYear} CATDEV LLC. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a href="/privacy" class="text-steel hover:text-white transition-colors text-sm">
          Privacy
        </a>
        <a href="/imprint" class="text-steel hover:text-white transition-colors text-sm">
          Imprint
        </a>
      </div>
    </div>
  </div>
</footer>
