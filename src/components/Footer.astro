---
const currentYear = new Date().getFullYear();

const footerLinks = {
  solutions: [
    { name: 'Platform Engineering', href: '/solutions/platform-engineering' },
    { name: 'DevSecOps & Security', href: '/solutions/devsecops' },
    { name: 'Cloud Migration', href: '/solutions/cloud-migration' },
    { name: 'Managed Operations', href: '/solutions/managed-ops' },
  ],
  company: [
    { name: 'About', href: '/about' },
    { name: 'How We Work', href: '/approach' },
    { name: 'Case Studies', href: '/case-studies' },
    { name: 'Contact', href: '/contact' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Imprint', href: '/imprint' },
  ],
};

const socialLinks = [
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/company/43311393/',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`
  },
  {
    name: 'Facebook',
    href: 'https://facebook.com/catdevllc',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>`
  },
];
---

<footer class="border-t border-white/5 bg-midnight/50">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-5">
        <a href="/" class="flex items-center mb-6">
          <img src="/logo.png" alt="catdev" class="h-10 w-auto" />
        </a>
        <p class="text-steel max-w-md mb-6 leading-relaxed">
          Production-grade platforms for engineering teams that ship fast.
          We build, secure, and operate modern cloud-native delivery systems.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-4 mb-6">
          {socialLinks.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-steel hover:text-cyan transition-colors"
              aria-label={social.name}
            >
              <div set:html={social.icon} />
            </a>
          ))}
        </div>

        <!-- Contact Info -->
        <div class="text-steel text-sm space-y-2">
          <p class="font-semibold text-white">CATDEV LLC</p>
          <p>7901 4th St N STE 300</p>
          <p>St. Petersburg, FL 33702, USA</p>
          <a href="mailto:info@catdev.io" class="text-cyan hover:text-white transition-colors inline-block mt-2">
            info@catdev.io
          </a>
        </div>
      </div>

      <!-- Solutions Links -->
      <div class="lg:col-span-2">
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Solutions
        </h4>
        <ul class="space-y-3">
          {footerLinks.solutions.map(link => (
            <li>
              <a href={link.href} class="text-steel hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div class="lg:col-span-2">
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Company
        </h4>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-steel hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal & Resources -->
      <div class="lg:col-span-3">
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Legal
        </h4>
        <ul class="space-y-3 mb-6">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-steel hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>

        <!-- CTA in Footer -->
        <div class="mt-8 p-4 bg-white/5 rounded-lg border border-white/10">
          <p class="text-white font-semibold mb-2 text-sm">Ready to build?</p>
          <a href="/contact" class="text-cyan hover:text-white transition-colors text-sm font-medium inline-flex items-center">
            Book Architecture Review
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-steel text-sm">
        &copy; {currentYear} CATDEV LLC. All rights reserved.
      </p>
      <p class="text-steel text-sm">
        Serving clients globally from St. Petersburg, Florida.
      </p>
    </div>
  </div>
</footer>
