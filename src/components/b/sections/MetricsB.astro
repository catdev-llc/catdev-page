<section id="metrics" class="section-padding" style="background-color: var(--color-bg-tertiary);">
  <div class="container-tech">
    <!-- Section Header -->
    <div class="mb-xl text-center reveal-tech">
      <div class="section-label">// 03</div>
      <h2 class="section-title">METRICS_</h2>
      <p class="section-subtitle">By the numbers</p>
    </div>

    <!-- Metrics Display -->
    <div class="flex items-center justify-center" style="gap: 0; flex-wrap: wrap;">
      <!-- Metric 1 -->
      <div class="metric-display reveal-tech delay-100">
        <div class="metric-number">10+</div>
        <div class="metric-label">YEARS</div>
      </div>

      <div class="metrics-divider" style="display: none;"></div>

      <!-- Metric 2 -->
      <div class="metric-display reveal-tech delay-200">
        <div class="metric-number">100%</div>
        <div class="metric-label">SECURE</div>
      </div>

      <div class="metrics-divider" style="display: none;"></div>

      <!-- Metric 3 -->
      <div class="metric-display reveal-tech delay-300">
        <div class="metric-number">24/7</div>
        <div class="metric-label">SUPPORT</div>
      </div>

      <div class="metrics-divider" style="display: none;"></div>

      <!-- Metric 4 -->
      <div class="metric-display reveal-tech delay-400">
        <div class="metric-number">500K+</div>
        <div class="metric-label">LINES_SHIPPED</div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 768px) {
    .metrics-divider {
      display: block !important;
    }
  }
</style>
