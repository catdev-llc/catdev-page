<section id="about" class="section-padding" style="background-color: var(--color-bg-tertiary);">
  <div class="container-tech">
    <!-- Section Header -->
    <div class="mb-xl reveal-tech">
      <div class="section-label">// 05</div>
      <h2 class="section-title">ABOUT_</h2>
      <p class="section-subtitle">Who we are</p>
    </div>

    <!-- Two Column Layout -->
    <div style="display: grid; gap: 3rem; grid-template-columns: 1fr;">
      <!-- Left Column: Main Content -->
      <div class="reveal-tech delay-100">
        <h3 class="mono" style="font-size: 1.5rem; margin-bottom: 1.5rem; color: var(--color-text-primary);">
          CATDEV_LLC
        </h3>

        <div style="color: var(--color-text-secondary); line-height: 1.8; margin-bottom: 2rem;">
          <p style="margin-bottom: 1.5rem;">
            We are full-stack engineers specializing in secure, AI-driven cloud solutions.
          </p>

          <p style="margin-bottom: 1.5rem;">
            Our team combines deep expertise in artificial intelligence, cloud infrastructure,
            and cybersecurity to help organizations build what comes next.
          </p>

          <p style="margin-bottom: 1.5rem;">
            Based in Florida, USA, we work with clients globally who demand excellence in
            engineering, security, and innovation.
          </p>
        </div>

        <div>
          <h4 class="mono" style="font-size: 0.875rem; color: var(--color-text-tertiary); text-transform: uppercase; margin-bottom: 1rem; letter-spacing: 0.1em;">
            FOCUS_AREAS_
          </h4>
          <ul class="card-list">
            <li>Enterprise-grade engineering</li>
            <li>AI & intelligent systems</li>
            <li>Kubernetes & cloud platforms</li>
            <li>Security-first architecture</li>
            <li>DevOps & automation</li>
          </ul>
        </div>
      </div>

      <!-- Right Column: Info Box -->
      <div class="reveal-tech delay-200">
        <div class="info-box">
          <div class="info-box-label">// CONTACT_INFO</div>
          <div class="info-box-content" style="margin-bottom: 2rem;">
            <p style="font-weight: 600; color: var(--color-text-primary); margin-bottom: 0.5rem;">CATDEV LLC</p>
            <p style="margin-bottom: 1rem;">Florida, USA</p>
            <p>
              <a href="mailto:info@catdev.io" style="color: var(--color-accent-cyan); text-decoration: none;">
                info@catdev.io
              </a>
            </p>
          </div>

          <div class="info-box-label">// CERTIFICATIONS</div>
          <div class="info-box-content">
            <p style="color: var(--color-text-tertiary); font-size: 0.875rem;">
              ISO 27001 Compliant<br />
              SOC 2 Type II<br />
              AWS Certified Solutions Architect
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1024px) {
    section > div > div:last-child {
      grid-template-columns: 2fr 1fr;
    }
  }
</style>
