<section id="hero" class="hero-tech">
  <!-- Background Pattern -->
  <div class="grid-pattern"></div>

  <!-- Content -->
  <div class="container-tech" style="position: relative; z-index: 10; text-align: center; padding-top: 5rem;">
    <div style="max-width: 900px; margin: 0 auto;">
      <!-- Label -->
      <div class="hero-label">
        // CATDEV_LLC
      </div>

      <!-- Main Headline -->
      <h1 class="hero-title">
        BUILD_WHAT<br />COMES_NEXT
      </h1>

      <!-- Subheadline -->
      <p class="hero-subtitle" style="margin-left: auto; margin-right: auto;">
        Full-stack engineering for organizations ready to lead the future.
        From AI agents to Kubernetes platformsâ€”we engineer what's next.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col items-center gap-md" style="margin-bottom: 3rem;">
        <div class="flex" style="gap: 1rem; flex-wrap: wrap; justify-content: center;">
          <a href="#contact" class="btn-tech btn-arrow">
            TALK_TO_US
          </a>
          <a href="#services" class="btn-tech btn-tech-secondary">
            VIEW_SERVICES
          </a>
        </div>
      </div>

      <!-- Small Accent -->
      <div style="margin-top: 4rem; display: flex; justify-content: center; align-items: center; gap: 1rem;">
        <div style="width: 40px; height: 1px; background-color: var(--color-accent-cyan);"></div>
        <div style="width: 4px; height: 4px; background-color: var(--color-accent-cyan); border-radius: 50%;"></div>
        <div style="width: 40px; height: 1px; background-color: var(--color-accent-cyan);"></div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div style="position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%); z-index: 10;">
    <a href="#services" style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem; color: var(--color-text-tertiary); text-decoration: none; transition: color 0.3s;">
      <span class="mono" style="font-size: 0.75rem; text-transform: uppercase;">SCROLL</span>
      <div style="width: 20px; height: 32px; border: 2px solid currentColor; border-radius: 16px; display: flex; align-items: flex-start; justify-content: center; padding: 4px;">
        <div style="width: 4px; height: 8px; background-color: currentColor; border-radius: 2px; animation: scroll-bounce 2s ease-in-out infinite;"></div>
      </div>
    </a>
  </div>
</section>

<style>
  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(8px);
      opacity: 0.5;
    }
  }
</style>
