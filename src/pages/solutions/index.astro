---
import Layout from '../../layouts/Layout.astro';

const solutions = [
  {
    id: 'platform-engineering',
    title: 'Platform Engineering',
    slug: '/solutions/platform-engineering',
    description: 'Production-grade platforms from infrastructure to deployment. Build secure, scalable cloud-native infrastructure with Kubernetes, Terraform, and GitOps.',
    icon: 'platform',
  },
  {
    id: 'devsecops',
    title: 'DevSecOps & Security',
    slug: '/solutions/devsecops',
    description: 'Software supply chain hardening and managed security operations. SBOM generation, vulnerability scanning, and zero-trust architectures.',
    icon: 'security',
  },
  {
    id: 'cloud-migration',
    title: 'Cloud Migration & Modernization',
    slug: '/solutions/cloud-migration',
    description: 'Migrate from legacy systems to modern cloud-native platforms. VPS to Kubernetes, Jenkins to GitHub Actions, and infrastructure modernization.',
    icon: 'cloud',
  },
  {
    id: 'managed-ops',
    title: 'Managed Operations',
    slug: '/solutions/managed-ops',
    description: '24/7 platform operations and support. We run what we build, ensuring your platform stays secure, compliant, and performant.',
    icon: 'ops',
  },
  {
    id: 'ai-ops',
    title: 'AI Ops & Intelligent Automation',
    slug: '/solutions/ai-ops',
    description: 'Autonomous operations powered by AI. Automated failure analysis, intelligent incident response, and AI-driven network analytics that generate expert-level reports in minutes.',
    icon: 'ai',
  },
];
---

<Layout
  title="Solutions"
  description="Secure, scalable cloud-native infrastructure and DevSecOps solutions for modern engineering teams."
>
  <!-- Hero Section -->
  <section class="section-padding bg-midnight relative overflow-hidden pt-32">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto mb-20 reveal">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Solutions for <span class="text-gradient">Modern Infrastructure</span>
        </h1>
        <p class="text-steel text-xl">
          Production-grade platforms built by engineers who understand the full stack—from infrastructure to deployment pipelines.
        </p>
      </div>

      <!-- Solutions Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {solutions.map((solution) => (
          <a
            href={solution.slug}
            class="card-glass p-8 hover:border-electric/50 transition-all duration-300 group reveal"
          >
            <div class="w-16 h-16 mb-6 rounded-xl bg-gradient-to-br from-electric/20 to-cyan/20 flex items-center justify-center">
              {solution.icon === 'platform' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              )}
              {solution.icon === 'security' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {solution.icon === 'cloud' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                </svg>
              )}
              {solution.icon === 'ops' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {solution.icon === 'ai' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              )}
            </div>
            <h3 class="text-2xl font-bold mb-4 group-hover:text-gradient transition-colors">
              {solution.title}
            </h3>
            <p class="text-steel text-lg mb-6">
              {solution.description}
            </p>
            <span class="text-cyan group-hover:text-electric transition-colors inline-flex items-center">
              Learn More →
            </span>
          </a>
        ))}
      </div>
    </div>

    <!-- Decorative gradient -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-electric/5 rounded-full blur-3xl -z-10"></div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-deep-space">
    <div class="container-custom">
      <div class="card-glass p-12 text-center max-w-3xl mx-auto reveal">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to build your <span class="text-gradient">platform</span>?
        </h2>
        <p class="text-steel text-lg mb-8">
          Book a free architecture review to discuss your infrastructure needs.
        </p>
        <a href="/contact" class="btn-primary">
          Book Architecture Review
        </a>
      </div>
    </div>
  </section>
</Layout>
