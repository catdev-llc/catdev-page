---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import TrustedBy from '../components/sections/TrustedBy.astro';
import CTASection from '../components/shared/CTASection.astro';
import { solutions } from '../data/solutions';
import { caseStudies } from '../data/caseStudies';

// Show all case studies on homepage (we have 6 total)
const displayedCaseStudies = caseStudies;

const approaches = [
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
    title: 'Security Baked In, Not Bolted On',
    description: "From image signing to secrets rotation to runtime policies—we build security into the foundation.",
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`,
    title: 'Everything as Code',
    description: 'Infrastructure, pipelines, policies, runbooks—all version-controlled and peer-reviewed. No ClickOps.',
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>`,
    title: 'Build It, Run It, Own It',
    description: 'We design your platform, deploy it, monitor it, and respond to incidents. Long-term operational partners.',
  },
];
---

<Layout>
  <Hero />
  <TrustedBy />

  <!-- Solutions Overview -->
  <section id="services" class="section-padding relative">
    <div class="absolute inset-0 hexagon-pattern opacity-20"></div>

    <div class="container-custom relative">
      <!-- Section Header -->
      <div class="text-center mb-12 reveal">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-white">How We</span>
          <span class="text-gradient"> Deliver Value</span>
        </h2>
        <p class="text-xl text-steel max-w-3xl mx-auto">
          From infrastructure to CI/CD to software supply chain security—we handle the entire value chain so your engineering team can focus on building products.
        </p>
      </div>

      <!-- Solution Cards -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {solutions.map((solution, index) => (
          <div
            class="card-glass p-8 transition-all duration-500 hover:-translate-y-2 reveal group"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="glow-effect"></div>
            <div class="relative z-10">
              <!-- Icon & Header -->
              <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-cyan to-electric mb-6">
                <div class="text-white" set:html={solution.icon} />
              </div>

              <h3 class="text-2xl font-bold text-white mb-2">{solution.title}</h3>
              <p class="text-cyan text-sm font-medium mb-4">{solution.tagline}</p>

              <p class="text-steel mb-6 leading-relaxed">
                {solution.description}
              </p>

              <a
                href={solution.slug}
                class="inline-flex items-center text-cyan hover:text-white transition-colors font-semibold"
              >
                Learn More
                <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- View All Solutions CTA -->
      <div class="text-center mt-12 reveal">
        <a href="/solutions" class="btn-secondary inline-flex">
          View All Solutions
        </a>
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section id="case-studies" class="section-padding relative overflow-hidden">
    <div class="absolute inset-0 hexagon-pattern opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-radial from-purple/5 via-transparent to-transparent"></div>

    <div class="container-custom relative">
      <!-- Section Header -->
      <div class="text-center mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-white">Real Platforms,</span>
          <span class="text-gradient"> Real Results</span>
        </h2>
        <p class="text-xl text-steel max-w-3xl mx-auto">
          From startups to banks—here's how we've built secure, scalable delivery platforms for teams that ship.
        </p>
      </div>

      <!-- Case Study Cards Grid - Show All 6 Studies -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {displayedCaseStudies.map((study, index) => (
          <div
            class="card-glass p-6 reveal group hover:-translate-y-1 transition-all duration-300"
            style={`transition-delay: ${index * 75}ms`}
          >
            <div class="glow-effect"></div>
            <div class="relative z-10 flex flex-col h-full">
              <!-- Header -->
              <div class="mb-4">
                <div class="inline-block px-3 py-1 bg-cyan/10 border border-cyan/30 rounded-full text-cyan text-xs font-semibold uppercase tracking-wider mb-3">
                  {study.clientType}
                </div>
                <span class="text-steel/60 text-xs block mb-2">{study.industry}</span>
                <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan transition-colors">
                  {study.title}
                </h3>
              </div>

              <!-- Problem -->
              <p class="text-steel text-sm mb-4 line-clamp-3 leading-relaxed flex-grow">
                {study.problem}
              </p>

              <!-- Key Results -->
              <div class="mb-4">
                <h4 class="text-green-400 font-semibold mb-2 flex items-center gap-2 text-xs">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                  Key Results
                </h4>
                <ul class="space-y-1">
                  {study.outcome.slice(0, 2).map(result => (
                    <li class="flex items-start gap-2 text-white text-xs">
                      <svg class="w-3 h-3 text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      <span>{result}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Technologies -->
              <div class="mb-4">
                <div class="flex flex-wrap gap-1">
                  {study.technologies.slice(0, 4).map(tech => (
                    <span class="px-2 py-0.5 bg-white/5 border border-white/10 rounded text-steel text-xs font-mono">
                      {tech}
                    </span>
                  ))}
                  {study.technologies.length > 4 && (
                    <span class="px-2 py-0.5 text-steel/60 text-xs">+{study.technologies.length - 4}</span>
                  )}
                </div>
              </div>

              <!-- CTA -->
              <a
                href={`/case-studies/${study.slug}`}
                class="text-cyan hover:text-white transition-colors text-sm font-semibold inline-flex items-center mt-auto"
              >
                Read Full Story
                <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- Explore All Case Studies CTA -->
      <div class="text-center mt-12 reveal">
        <a href="/case-studies" class="btn-secondary inline-flex">
          <span>Explore All Case Studies</span>
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why catdev (Our Approach) -->
  <section id="approach" class="section-padding relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-radial from-electric/5 via-transparent to-transparent"></div>

    <div class="container-custom relative">
      <!-- Section Header -->
      <div class="text-center mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-white">Why</span>
          <span class="text-gradient"> catdev</span>
        </h2>
        <p class="text-xl text-steel max-w-3xl mx-auto">
          Engineer-to-engineer, no fluff, no hand-waving. Three core beliefs that guide every platform we build.
        </p>
      </div>

      <!-- Approach Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {approaches.map((approach, index) => (
          <div
            class="group text-center reveal"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="card-glass p-8 h-full transition-all duration-500 hover:scale-105">
              <div class="glow-effect"></div>
              <div class="relative z-10">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-hero mb-6 text-white">
                  <div set:html={approach.icon} />
                </div>
                <h3 class="text-2xl font-bold text-white mb-4">
                  {approach.title}
                </h3>
                <p class="text-steel leading-relaxed">
                  {approach.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Learn More Link -->
      <div class="text-center mt-12 reveal">
        <a href="/approach" class="btn-secondary inline-flex">
          Learn About Our Approach
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <CTASection
    headline="Ready to ship without platform headaches?"
    subheadline="Book a free architecture review. We'll assess your current infrastructure, identify security gaps and operational risks, and show you what a production-grade platform looks like."
    primaryCTA={{
      text: 'Book Architecture Review',
      href: '/contact'
    }}
    secondaryCTA={{
      text: 'Explore Solutions',
      href: '/solutions'
    }}
  />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
