---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Imprint | catdev" description="Legal information and company details for CATDEV LLC">
  <section class="section-padding pt-32">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-8 text-white">Imprint</h1>

        <div class="card-glass p-8 md:p-12 space-y-8">
          <div>
            <h2 class="text-xl font-semibold text-white mb-4">Company Information</h2>
            <p class="text-steel leading-relaxed">
              <strong class="text-white">CATDEV LLC</strong><br />
              A limited liability company organized under the laws of Florida, USA
            </p>
          </div>

          <div>
            <h2 class="text-xl font-semibold text-white mb-4">Address</h2>
            <p class="text-steel leading-relaxed">
              7901 4th St N STE 300<br />
              St. Petersburg, FL 33702<br />
              United States
            </p>
          </div>

          <div>
            <h2 class="text-xl font-semibold text-white mb-4">Contact</h2>
            <p class="text-steel leading-relaxed">
              Email: <a href="mailto:info@catdev.io" class="text-cyan hover:text-white transition-colors">info@catdev.io</a>
            </p>
          </div>

          <div>
            <h2 class="text-xl font-semibold text-white mb-4">Registration</h2>
            <p class="text-steel leading-relaxed">
              EIN: 36-501-8065
            </p>
          </div>

          <div>
            <h2 class="text-xl font-semibold text-white mb-4">Responsible for Content</h2>
            <p class="text-steel leading-relaxed">
              CATDEV LLC<br />
              7901 4th St N STE 300<br />
              St. Petersburg, FL 33702, USA
            </p>
          </div>
        </div>

        <div class="mt-8">
          <a href="/" class="text-cyan hover:text-white transition-colors inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
